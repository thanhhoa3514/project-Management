extends ../../layout/otp-password.pug 
block main 
    .container.my-5 
        .row.justify-content-center 
            .col-8 
                h1(class="text-center") Enter code to authentication 
                form(
                    action="/user/password/otp"
                    method="POST"
                )
                    
                    div(class="form-group")
                        label(for="email") Email 
                        input(
                            type="email"
                            id="email"
                            name="email"
                            class="form-control"
                            value=email
                            required
                            readonly
                        )

                    div(class="form-group")
                        label(for="otp") OTP
                        input(
                            type="text"
                            id="otp"
                            name="otp"
                            class="form-control"
                            required
                        )
                    div(class="form-group")
                        button(
                            type="submit"
                            class="btn btn-primary btn-block"
                        ) Confirm
