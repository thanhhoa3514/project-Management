extends ../../layout/forgot-password.pug 
block main 
    .container.my-5 
        .row.justify-content-center 
            .col-8 
                h1(class="text-center") Getting a password back 
                form(
                    action="/user/password/forgot"
                    method="POST"
                )
                    
                    div(class="form-group")
                        label(for="email") Email 
                        input(
                            type="email"
                            id="email"
                            name="email"
                            class="form-control"
                            required
                        )
                    div(class="form-group")
                        button(
                            type="submit"
                            class="btn btn-primary btn-block"
                        ) Sent it to mail