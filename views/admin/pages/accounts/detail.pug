extends ../../layouts/default.pug  

block main  
    if(record)  
        .container-fluid  
            .row  
                .col-12  
                    h1(class="mb-4 text-primary") Account Details  

            .row  
                .col-md-8.offset-md-2  
                    .card.shadow-sm  
                        .card-header.bg-light.d-flex.justify-content-between.align-items-center  
                            h5.card-title.m-0 Account Information  
                            span.badge(class=record.status === 'active' ? 'badge-success' : 'badge-warning')   
                                | #{record.status || 'Unknown Status'}  

                        .card-body  
                            .row  
                                .col-md-4.text-center  
                                    // Avatar Placeholder  
                                    .mb-3  
                                        img.img-fluid.rounded-circle(  
                                            src=record.avatar || '/path/to/default-avatar.png'   
                                            alt="User Avatar"   
                                            style="width: 150px; height: 150px; object-fit: cover;"  
                                        )  

                                .col-md-8  
                                    .row  
                                        .col-md-6  
                                            .form-group.mb-3  
                                                label.font-weight-bold User Details  
                                                if(record.fullName)  
                                                    p.mb-1  
                                                        i.fas.fa-user.mr-2  
                                                        | #{record.fullName}  
                                                
                                                if(record.phone)  
                                                    p.mb-1  
                                                        i.fas.fa-phone.mr-2  
                                                        | #{record.phone}  
                                                
                                                if(record.email)  
                                                    p.mb-1  
                                                        i.fas.fa-envelope.mr-2  
                                                        | #{record.email}  

                                        .col-md-6  
                                            .form-group.mb-3  
                                                label.font-weight-bold Account Information  
                                                p.mb-1  
                                                    i.fas.fa-calendar-alt.mr-2  
                                                    | Joined: #{record.createdAt ? record.createdAt.toLocaleDateString() : 'N/A'}  
                                                p.mb-1  
                                                    i.fas.fa-user-tag.mr-2  
                                                    //- | Role: #{record.role || 'Not Specified'}  

                            hr  

                            .form-group.d-flex.justify-content-between.mt-4  
                                .btn-group  
                                    a(  
                                        href=`${prefixAdmin}/accounts/edit/${record._id}`  
                                        class="btn btn-primary"  
                                    )   
                                        i.fas.fa-edit.mr-2  
                                        | Edit Profile  
                                    
                                    a(  
                                        href=`${prefixAdmin}/accounts`  
                                        class="btn btn-outline-secondary"  
                                    )   
                                        i.fas.fa-times.mr-2  
                                        | Cancel