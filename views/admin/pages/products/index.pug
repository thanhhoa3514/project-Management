extends ../../layouts/default.pug

block main
    h1 Products Page

    .card.mb-3
        .card-header Filter and  Search
        .card-body 
            .row
                .col-5
                    each item in filterStatus
                        button(
                            class=`btn btn-sm ml-1 btn-outline-success ${item.class}`
                            button-status=item.status
                        ) #{item.name}

                .col-5
                    form(id="form-search")
                        .input-group 
                            input(
                                type="text"
                                placeholder="Search"
                                name="keyword"
                                class="form-control"
                                value=keyword
                            )
                            .input-group-append
                                button(
                                    class="btn btn-success"
                                    type="submit"
                                ) Find


    .card.mb-3 
        .card-header List
        .card-body
            table.table.table-hover.table-sm 
                thead
                    tr
                        th Order 
                        th Image
                        th Title 
                        th Price
                        th Status
                        th Action

                tbody 
                    each item,index in products
                        tr 
                            td #{index+1}
                            td  
                                img(src="https://cdn.dummyjson.com/products/images/beauty/Powder%20Canister/thumbnail.png",
                                    alt=item.title
                                    width="80px"
                                    height="auto"
                                )
                            td #{item.title}          
                            td #{item.price}$
                            td 
                                if(item.status=="active")
                                    a(href="#" class="badge badge-success") Available
                                else 
                                    a(href="#" class="badge badge-danger") Unavailable
                            td 
                                button(class="btn btn-warning btn-sm") Modify
                                button(class="btn btn-danger btn-sm ml-1") Remove


            