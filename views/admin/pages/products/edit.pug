extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
    +alert-error(3000)
    +alert(3000)
    h1(class="mb-4") Edit products
    
    form(
        action=`${prefixAdmin}/products/edit/${product.id}?_method=PATCH`
        id="form-edit-product"
        method="POST"
        enctype="multipart/form-data"
    ) 
        div(class="form-group")
            label(for="title") Headline
            input(
                type="text"
                id="title"
                name="title"
                class="form-control"
                required
                value=product.title
            )
        div(class="form-group")
            label(for="desc") Describe
            textarea(
                type="text"
                id="desc"
                name="description"
                class="form-control  textarea-mce"
                rows="5"
                value=product.description
                
            ) #{product.description}
        div(class="form-group")
            label(for="price") Price
            input(
                type="number"
                id="price"
                name="price"
                class="form-control"
                value=product.price

                min="0"

            )
        div(class="form-group")
            label(for="discount") Discount Percentage
            input(
                type="number"
                id="discount"
                name="discountPercentage"
                class="form-control"
                value=product.discountPercentage
                min="0"
            )
        div(class="form-group")
            label(for="stock") Remaining: 
            input(
                type="number"
                id="stock"
                name="stock"
                class="form-control"
                value=product.stock
                min="0"
            )
        div(
            style-form
            class="form-group"
            upload-image
        )
            label(for="thumbnail") Image of item
            input(
                type="file"
                id="thumbnail"
                name="thumbnail"
                class="form-control-file"
                accept="image/*"
                upload-image-input
            )
            button(
                type="button" 
                class="btn btn-secondary delete-image"
                delete-image-preview
            ) x
            img(
                src=product.thumbnail,
                upload-image-preview
                class="image-preview"
            )
        div(class="form-group")
            label(for="position") Position
            input(
                type="number"
                id="position"
                name="position"
                class="form-control"
                placeholder="Automatically increment position"
                min="1"
                value=product.position
            )
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="active"
                checked=(product.status=="active" ? true : false)
            ) 
            label(for="statusActive" class="form-check-label") Active 
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusInActive"
                name="status"
                value="inactive"
                checked=(product.status=="inactive" ? true : false)
            )
            label(for="statusInActive" class="form-check-label") Inactive
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Update
            

    script(src="/admin/js/product.js") 
    
