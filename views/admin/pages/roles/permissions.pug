extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
    +alert-error(3000)
    +alert(3000)

    h1(class="mb-4") Authentication
    if(records)
        div(data-records=records)
        div(class="text-right")
            button(
                type="submit"
                class="btn btn-primary"
                button-submit
            ) Update
            button(
                type="reset"
                class="btn btn-secondary"
                button-reset
            )   Reset
        table(
            class="table table-hover table-sm"
            table-permissions
        )
            thead 
                tr 
                    th Feature 
                    each item in records
                        th(class="text-center") #{item.title}
            tbody 
                tr(data-name="id" class="d-none")
                    td
                    each item in records
                        td(class="text-center") 
                            input(type="text" value=item.id)

                //- PRODUCT CATEGORY
                tr 
                    td(colspan="4")
                        b Category Product 
                tr(data-name="products-category_view")
                    td See 
                    each item in records
                        td(class="text-center")
                            input(type="checkbox")
                    
                tr(data-name="products-category_create")
                    td Create 
                    each item in records
                        td(class="text-center")
                            input(type="checkbox")
                tr(data-name="products-category_edit")
                    td Edit 
                    each item in records
                        td(class="text-center")
                            input(type="checkbox")
                tr(data-name="products-category_delete")
                    td Delete 
                    each item in records
                        td(class="text-center")
                            input(type="checkbox")


                tr 
                    td(colspan="4")
                        b  Products 
                tr(data-name="products_view")
                    td See 
                    each item in records
                        td(class="text-center")
                            input(type="checkbox")
                    
                tr(data-name="products_create")
                    td Create 
                    each item in records
                        td(class="text-center")
                            input(type="checkbox")
                tr(data-name="products_edit")
                    td Edit 
                    each item in records
                        td(class="text-center")
                            input(type="checkbox")
                tr(data-name="products_delete")
                    td Delete 
                    each item in records
                        td(class="text-center")
                            input(type="checkbox")
                
                tr 
                    td(colspan="4")
                        b  Role
                tr(data-name="roles_view")
                    td See 
                    each item in records
                        td(class="text-center")
                            input(type="checkbox")
                    
                tr(data-name="roles_create")
                    td Create 
                    each item in records
                        td(class="text-center")
                            input(type="checkbox")
                tr(data-name="roles_edit")
                    td Edit 
                    each item in records
                        td(class="text-center")
                            input(type="checkbox")
                tr(data-name="roles_delete")
                    td Delete 
                    each item in records
                        td(class="text-center")
                            input(type="checkbox")

                tr 
                    td(colspan="4")
                        b  Restore 
                tr(data-name="restore_view")
                    td See 
                    each item in records
                        td(class="text-center")
                            input(type="checkbox")
                    
                tr(data-name="restore_create")
                    td Create 
                    each item in records
                        td(class="text-center")
                            input(type="checkbox")
                tr(data-name="restore_edit")
                    td Edit 
                    each item in records
                        td(class="text-center")
                            input(type="checkbox")
                tr(data-name="restore_delete")
                    td Delete 
                    each item in records
                        td(class="text-center")
                            input(type="checkbox")
    else 
        div(class="alert alert-info") There is no permission here 
        div(class="text-right")
            a(
                href=`${prefixAdmin}/roles/create`
                class="btn btn-success"
            )   Create permission


    form(
        method="POST"
        id="form-change-permissions"
        action=`${prefixAdmin}/roles/permissions?_method=PATCH`
        class="d-none"
    ) 
        div(class="form-group")
            input(

                type="text"
                class="form-control"
                name="permissions"
            )
    script(src="/admin/js/roles.js") 