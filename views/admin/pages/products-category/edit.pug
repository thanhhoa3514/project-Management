extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/select-tree.pug

block main 
    +alert-error(3000)
    +alert(3000)
    
    h1(class="mb-4") Edit Category 
    //- div #{record}
    form(
        action=`${prefixAdmin}/products-category/edit/${record.id}?_method=PATCH`
        method="POST"
        enctype="multipart/form-data"
    ) 
        div(class="form-group")
            label(for="title") Headline
            input(
                type="text"
                id="title"
                name="title"
                class="form-control"
                required
                value=record.title
            )
        div(class="form-group")
            label(for="parent_id") Parent Category
            select(
                id="parent_id"
                name="parent_id"
                class="form-control"
            )

                option(value="") ---Chose a category ---
                if(tree)
                    +select-tree(tree,1,record.parent_id)

                        
        div(class="form-group")
            label(for="description") Description
            textarea(
                type="text"
                id="description"
                name="description"
                class="form-control textarea-mce"
                rows="5"
                

            ) #{record.description}
        div(
            style-form
            class="form-group"
            upload-image
        )
            label(for="thumbnail") Image of item
            input(
                type="file"
                id="thumbnail"
                name="thumbnail"
                class="form-control-file"
                accept="image/*"
                upload-image-input
            )
            button(
                type="button" 
                class="btn btn-secondary delete-image"
                delete-image-preview
            ) x
            img(
                src=record.thumbnail
                upload-image-preview
                class="image-preview"
            )
        div(class="form-group")
            label(for="position") Position
            input(
                type="number"
                id="position"
                name="position"
                class="form-control"
                placeholder="Automatically increment position"
                min="1"
                value=record.position
            )
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="active"
                checked=(record.status=="active" ? true : false)
            ) 
            label(for="statusActive" class="form-check-label") Active 
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusInActive"
                name="status"
                value="inactive"
                checked=(record.status=="inactive" ? true : false)
            )
            label(for="statusInActive" class="form-check-label") Inactive
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Update